<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@drawable/common_line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:paddingLeft="@dimen/px_20"
        android:paddingRight="@dimen/px_20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp">

            <TextView
                android:id="@+id/item_line_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textsize_28"
                android:textColor="@android:color/black"/>

            <TextView
                android:layout_width="@dimen/px_32"
                android:layout_height="@dimen/px_32"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/px_30"
                android:background="@android:color/holo_blue_dark"
                android:textSize="@dimen/textsize_24"
                android:textColor="@android:color/white"
                android:text="起"/>

            <TextView
                android:id="@+id/item_line_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="@dimen/px_10"
                android:textSize="@dimen/textsize_28"
                android:textColor="@android:color/black"/>

        </LinearLayout>


        <ImageView
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/arrow"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="35dp">

            <TextView
                android:layout_width="@dimen/px_32"
                android:layout_height="@dimen/px_32"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@android:color/holo_green_dark"
                android:textSize="@dimen/textsize_24"
                android:text="终"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/item_line_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/textsize_28"
                android:layout_marginLeft="@dimen/px_10"
                android:textColor="@android:color/black"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/px_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_22"
            android:textColor="@color/serial_tip_color"
            android:text="班次："/>

        <TextView
            android:id="@+id/line_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_22"
            android:textColor="@android:color/holo_green_light"
            android:layout_marginLeft="@dimen/px_10"
            android:text="已预定"/>
<!--
        <TextView
            android:id="@+id/order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_22"
            android:layout_marginLeft="@dimen/px_10"
            android:textColor="@android:color/holo_green_light"
            android:text="10位"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_22"
            android:layout_marginLeft="@dimen/px_60"
            android:textColor="@color/serial_tip_color"
            android:text="剩余"/>

        <TextView
            android:id="@+id/free_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px_10"
            android:textSize="@dimen/textsize_22"
            android:textColor="@android:color/holo_green_light"
            android:text="18位"/>
            -->

    </LinearLayout>


</LinearLayout>